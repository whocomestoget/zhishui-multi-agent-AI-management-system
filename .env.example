# 智水AI智慧管理解决方案 - 环境变量配置
# 请将本文件复制为 .env 并填入您的实际配置值

# =============================================================================
# OpenAI API 配置
# =============================================================================

# OpenAI API密钥 (必填)
# 获取方式：https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API基础地址 (可选，默认：https://api.openai.com/v1)
# 如果使用代理或第三方服务，请修改此地址
OPENAI_API_BASE=https://api.openai.com/v1

# 使用的模型名称 (可选，默认：gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# 系统配置
# =============================================================================

# 运行环境 (development/production)
SYSTEM_ENV=development

# 日志级别 (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# 系统端口配置
COORDINATOR_PORT=8000
FRONTEND_PORT=8501

# =============================================================================
# 数据库配置
# =============================================================================

# SQLite数据库路径 (可选，使用默认路径)
# DATABASE_URL=sqlite:///./data/zhishui_ai.db

# =============================================================================
# 安全配置
# =============================================================================

# JWT密钥 (用于生产环境的身份验证)
# JWT_SECRET_KEY=your_jwt_secret_key_here

# API访问密钥 (可选，用于额外的API安全)
# API_SECRET_KEY=your_api_secret_key_here

# =============================================================================
# 性能配置
# =============================================================================

# 最大并发工作流数量
MAX_CONCURRENT_WORKFLOWS=5

# 智能体最大执行时间 (秒)
MAX_AGENT_EXECUTION_TIME=600

# 线程池大小
THREAD_POOL_SIZE=4

# =============================================================================
# 外部服务配置
# =============================================================================

# 邮件服务配置 (可选)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_email_password

# =============================================================================
# 监控配置
# =============================================================================

# 是否启用性能监控
ENABLE_PERFORMANCE_MONITORING=true

# 监控数据保留时间 (天)
MONITORING_DATA_RETENTION_DAYS=30

# =============================================================================
# 开发配置
# =============================================================================

# 是否启用调试模式
DEBUG=false

# 是否启用热重载 (开发模式)
RELOAD=false

# 是否显示详细错误信息
SHOW_ERROR_DETAILS=false